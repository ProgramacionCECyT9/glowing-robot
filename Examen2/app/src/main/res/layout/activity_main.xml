<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_nombre"
        android:text="Reservaciones a nombre de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editNombre"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nombre"/>
    <TextView
        android:id="@+id/txt_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNombre"
        android:text="Numero de personas"/>
    <EditText
        android:id="@+id/editNumero"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_numero"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_obtenerUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNumero"
        android:text="obtener ubicacion"/>
    <Button
        android:id="@+id/btn_detenerServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_obtenerUbicacion"
        android:text="detenerServicio"/>
    <Button
        android:id="@+id/btn_reservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_detenerServicio"
        android:text="reservar"/>
    <Button
        android:id="@+id/btn_verReservaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_reservar"
        android:text="verReservaciones"/>

</RelativeLayout>
